#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install youtube-dl"
BUILD_DIR=$1

VENDOR_DIR="vendor"
DOWNLOAD_URL="https://stark-crag-51432.herokuapp.com/youtube-dl"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p youtube-dl
cd youtube-dl

curl -L $DOWNLOAD_URL -o youtube-dl

echo "Granting Permission" | indent
chmod 777 youtube-dl
ls -l youtube-dl

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/youtube-dl.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:${HOME}/vendor/youtube-dl"' >> $PROFILE_PATH
